<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <groupId>cmf.amp.topology</groupId>
  <artifactId>gtc</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Global Topology Client</name>
  <url>http://labs.beri.co/cmf/topology</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <cmf.version>3.1.0-SNAPSHOT</cmf.version>
    <amp.version>3.1.0-SNAPSHOT</amp.version>
    <spring.version>3.2.1.RELEASE</spring.version>
  </properties>

  <repositories>
  	
  	  <repository>
		  <id>nexus.bericotechnologies.com</id>
		  <name>Berico Technologies Nexus</name>
		  <url>http://nexus.bericotechnologies.com/content/groups/public</url>
		  <releases><enabled>true</enabled></releases>
		  <snapshots><enabled>true</enabled></snapshots>
	 </repository>

  </repositories>

  <dependencies>
     <dependency>
    		<groupId>cmf</groupId>
    		<artifactId>cmf.bus</artifactId>
    		<version>${cmf.version}</version>
    </dependency>
    
    <dependency>
    		<groupId>amp</groupId>
    		<artifactId>amp.bus</artifactId>
    		<version>${amp.version}</version>
    </dependency>
    
    <dependency>
    		<groupId>amp</groupId>
    		<artifactId>amp.bus.rabbit</artifactId>
    		<version>${amp.version}</version>
    </dependency>
    
    <dependency>
    		<groupId>amp</groupId>
    		<artifactId>amp.eventing</artifactId>
    		<version>${amp.version}</version>
    </dependency>
    
    <dependency>
		<groupId>org.apache.httpcomponents</groupId>
		<artifactId>httpclient</artifactId>
		<version>4.2.3</version>
	</dependency>
            
    <dependency>
		<groupId>com.google.guava</groupId>
		<artifactId>guava</artifactId>
		<version>14.0</version>
	</dependency>
            
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.10</version>
      <scope>test</scope>
    </dependency>
    
    <dependency>
		<groupId>org.mockito</groupId>
		<artifactId>mockito-all</artifactId>
		<version>1.9.5</version>
		<scope>test</scope>
	</dependency>

    <dependency>
	    <groupId>com.berico</groupId>
		<artifactId>test-utils</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<scope>test</scope>
	</dependency>
	
	<dependency>
		<groupId>org.springframework</groupId>
		<artifactId>spring-context</artifactId>
		<version>${spring.version}</version>
		<exclusions>
		 	<exclusion>
		 		<groupId>commons-logging</groupId>
		 		<artifactId>commons-logging</artifactId>
		 	</exclusion>
		</exclusions>
		<scope>test</scope>
	</dependency> 
     
  </dependencies>
</project>
