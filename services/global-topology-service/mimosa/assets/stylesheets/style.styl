html, body 
	height 100%

#wrap 
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -60px

#push, #footer 
	height 60px

#footer 
	text-align center
	background-color grayLightest
	border 1px solid grayLighter
	
@media (max-width: 767px) {
  #footer { margin-left: -20px; margin-right: -20px; padding-left: 20px; padding-right: 20px; }
}

#wrap > .container-fluid 
	padding-top 60px
	
.container .copyright  
	margin 20px 0
	
.ml2
	margin-left 2px

.ml5
	margin-left 5px
	
.ml10
	margin-left 10px

.mb4
	margin-bottom 4px
	
.mt4
	margin-top 4px

.mt10
	margin-top 10px

.mt40
	margin-top 40px

.bbgray
	border-bottom 1px solid #ccc

.mwidth100
	min-width 100px

.mwidth150
	min-width 150px

.padl3
	padding-left 3px

.center
	text-align center

.topo-canvas-parent
	position relative
	border-radius 8px
	-moz-border-radius 8px
	-webkit-border-radius 8px
	background-color #fff
	border 3px dotted #eee
	height 600px

.topo-canvas
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	
.routes
	color blue
	
.exchanges
	color orange
	
.topics
	color red
	
.clients
	color green
	
.brokers
	color purple

.rounded-top
	-webkit-border-top-left-radius: 6px;
	-webkit-border-top-right-radius: 6px;
	-moz-border-radius-topleft: 6px;
	-moz-border-radius-topright: 6px;
	border-top-left-radius: 6px;
	border-top-right-radius: 6px;

.bg-success
	background-color #73A839
	color white

.bg-warning
	background-color #DD5600
	color white
	
.bg-danger
	background-color #C71C22
	color white

.modal-header-title
	font-size 2em
	padding 6px
	
